<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6B8DC"
        android:backgroundTint="#ECBBF4"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:text="Service Name"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:text="Service Price"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/service_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_price"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:text="Service Duration"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/service_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_duration"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:text="Service Category"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_category"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnedit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:backgroundTint="#0B8003"
                android:text="EDIT"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnview"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:backgroundTint="#1B1919"
                android:text="VIEW"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btndelete"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:backgroundTint="#F43C3C"
                android:text="DELETE"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>